rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Match any document in the 'wishlists' collection
    match /wishlists/{wishlistId} {
      // Allow read for all authenticated users
      allow read: if request.auth != null;

      // Allow write (both create and update) only if user is authenticated 
      // and the document ID matches their user ID
      allow write: if request.auth != null && request.auth.uid == wishlistId;
    }
  }
}
